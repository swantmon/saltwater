
#ifndef __INCLUDE_FS_TEXTURE_CUBE_GLSL__
#define __INCLUDE_FS_TEXTURE_CUBE_GLSL__

// -----------------------------------------------------------------------------
// Input from engine
// -----------------------------------------------------------------------------
layout(binding =  0) uniform samplerCube ps_InputTexture;

// -----------------------------------------------------------------------------
// Input to fragment from VS
// -----------------------------------------------------------------------------
layout(location = 1) in vec3 in_Normal;

// -----------------------------------------------------------------------------
// Output to fragment
// -----------------------------------------------------------------------------
layout(location = 0) out vec4 out_Output;

// -----------------------------------------------------------------------------
// Function
// -----------------------------------------------------------------------------
void main(void)
{
    // -----------------------------------------------------------------------------
    // Read data from engine
    // -----------------------------------------------------------------------------
    vec4 CurrentLightColor = textureLod(ps_InputTexture, in_Normal, 0).rgba;

    // -----------------------------------------------------------------------------
    // Return final color
    // -----------------------------------------------------------------------------
    out_Output = CurrentLightColor;
}

#endif // __INCLUDE_FS_TEXTURE_CUBE_GLSL__