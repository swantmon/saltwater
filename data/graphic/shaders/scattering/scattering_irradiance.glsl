////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
///////////////////// Shader for creating irradiance table
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

#include <scattering_common.fx>
#include <scattering_precompute_common.fx>

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
///////////////////// Vertex shader
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

float4 VSShader(uint _VertexID : SV_VertexID) : SV_Position
{
    float2 Vertices[] =
    {
        float2(-1.0f, -1.0f),
        float2( 3.0f, -1.0f),
        float2(-1.0f,  3.0f),
    };

    return float4(Vertices[_VertexID], 0.0f, 1.0f);
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
///////////////////// Pixel shader
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

float4 PSShader(float4 _CSPosition : SV_Position) : SV_Target
{
    float2 RMu = CalcIrradianceRMu(_CSPosition.xy / float2(g_IrradianceWidth, g_IrradianceHeight));
    float Radius = RMu.x;
    float Mu = RMu.y;
    return float4(GetTransmittance(Radius, Mu) * max(Mu, 0.0f), 0.0f);
}