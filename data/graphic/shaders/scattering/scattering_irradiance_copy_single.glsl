////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
///////////////////// Shader for copying deltaE into irradiance table
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

#include <scattering_common.fx>
#include <scattering_precompute_common.fx>

Texture2D<float4> g_DeltaE : register(t0);

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
///////////////////// Vertex shader
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

float4 VSShader(uint _VertexID : SV_VertexID) : SV_Position
{
    float2 Vertices[] =
    {
        float2(-1.0f, -1.0f),
        float2( 3.0f, -1.0f),
        float2(-1.0f,  3.0f),
    };

    return float4(Vertices[_VertexID], 0.0f, 1.0f);
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
///////////////////// Pixel shader
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

float4 PSShader(float4 _CSPosition : SV_Position) : SV_Target
{
    return g_DeltaE[_CSPosition.xy];
}