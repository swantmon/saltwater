
#ifndef __INCLUDE_FS_TEXT_GLSL__
#define __INCLUDE_FS_TEXT_GLSL__

// -----------------------------------------------------------------------------
// Input from engine
// -----------------------------------------------------------------------------
uniform sampler2D ps_Text;

// -----------------------------------------------------------------------------
// Input to fragment from VS
// -----------------------------------------------------------------------------
layout(location = 1) in vec4 in_Color;
layout(location = 2) in vec2 in_UV;

// -----------------------------------------------------------------------------
// Output to fragment
// -----------------------------------------------------------------------------
layout(location = 0) out vec4 out_Output;

// -----------------------------------------------------------------------------
// Function
// -----------------------------------------------------------------------------
void main(void)
{
    vec2 TexCoord = vec2(in_UV.x, 1.0f - in_UV.y);

    // -----------------------------------------------------------------------------
    // Read data from engine
    // -----------------------------------------------------------------------------
    vec4  CurrentLightColor = texture(ps_Text, TexCoord);

//    CurrentLightColor *= in_Color;

    // -----------------------------------------------------------------------------
    // Return final color into system back buffer
    // -----------------------------------------------------------------------------
    out_Output = vec4(CurrentLightColor);
}

#endif // __INCLUDE_FS_TEXT_GLSL__