
#ifndef __INCLUDE_FS_TEXTURE_GLSL__
#define __INCLUDE_FS_TEXTURE_GLSL__

// -----------------------------------------------------------------------------
// Input from engine
// -----------------------------------------------------------------------------
uniform sampler2D ps_InputTexture;

// -----------------------------------------------------------------------------
// Input to fragment from VS
// -----------------------------------------------------------------------------
layout(location = 2) in vec2 in_UV;

// -----------------------------------------------------------------------------
// Output to fragment
// -----------------------------------------------------------------------------
layout(location = 0) out vec4 out_Output;

// -----------------------------------------------------------------------------
// Function
// -----------------------------------------------------------------------------
void main(void)
{
    // -----------------------------------------------------------------------------
    // Read data from engine
    // -----------------------------------------------------------------------------
    vec4 CurrentLightColor = texture(ps_InputTexture, in_UV).rgba;

    // -----------------------------------------------------------------------------
    // Return final color
    // -----------------------------------------------------------------------------
    out_Output = CurrentLightColor;
}

#endif // __INCLUDE_FS_TEXTURE_GLSL__